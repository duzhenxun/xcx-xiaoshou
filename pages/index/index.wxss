/**index.wxss**/
/* 主页样式 */
.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: #f8f8f8;
  padding: 30rpx;
}

/* 页头样式 */
.header {
  text-align: center;
  margin-bottom: 50rpx;
  padding: 20rpx 0;
}

.header-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 16rpx;
}

.header-subtitle {
  font-size: 28rpx;
  color: #666;
  display: block;
}

/* 网格布局 */
.grid-container {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  margin: 0 auto;
  width: 100%;
}

.grid-item {
  width: calc(50% - 16rpx);
  margin-bottom: 32rpx;
  background-color: #fff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  overflow: hidden;
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.grid-item:active {
  transform: scale(0.97);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.grid-item-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx 20rpx;
  height: 240rpx;
}

.grid-icon {
  width: 100rpx;
  height: 100rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50rpx;
  position: relative;
}

.icon-image {
  width: 60rpx;
  height: 60rpx;
  display: block;
}

/* 不同模块的图标颜色 */
.grid-icon.1 { background-color: #ff4d4f; }  /* 视频去水印 */
.grid-icon.2 { background-color: #36cfc9; }  /* 图片修复 */
.grid-icon.3 { background-color: #52c41a; }  /* 证件照 */
.grid-icon.4 { background-color: #faad14; }  /* 报名统计 */
.grid-icon.5 { background-color: #722ed1; }  /* 随机发号 */
.grid-icon.6 { background-color: #4285f4; }  /* 充电记录 */
.grid-icon.7 { background-color: #a0a0a0; }  /* 待添加 */
.grid-icon.8 { background-color: #a0a0a0; }  /* 待添加 */

.grid-text {
  font-size: 28rpx;
  color: #333;
  text-align: center;
  font-weight: 500;
}

/* 页脚样式 */
.footer {
  margin-top: auto;
  padding: 30rpx 0;
  text-align: center;
}

.footer-text {
  font-size: 24rpx;
  color: #999;
}

/* 分享按钮样式 */
.share-container {
  margin: 30rpx 0;
  display: flex;
  justify-content: center;
  width: 100%;
}

.share-button {
  background-color: #4285f4;
  color: white;
  border-radius: 40rpx;
  font-size: 28rpx;
  padding: 10rpx 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
  box-shadow: 0 4rpx 12rpx rgba(66, 133, 244, 0.3);
}

.share-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 12rpx;
}
