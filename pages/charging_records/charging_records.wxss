.search-button::after {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(255, 255, 255, 0.1);
  transform: translateX(-100%);
  transition: transform 0.5s ease;
}

.search-button:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(7, 193, 96, 0.3);
}

.search-button:active::after {
  transform: translateX(0);
}

/* 组件间间距 */
.charging-table {
  margin-top: 20rpx;
}

/* 汇总卡片样式 */
.summary-card {
  background-color: #fff;
  border-radius: 8rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

/* 汇总标题样式 */
.summary-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #07c160;
  text-align: center;
  margin-bottom: 10rpx;
}

/* 总度数样式 */
.summary-total {
  font-size: 32rpx;
  font-weight: bold;
  text-align: center;
}

.total-degrees {
  color: #e53935;
  font-size: 36rpx;
}

/* 底部说明样式 */
.summary-content {
  font-size: 26rpx;
  color: #666;
  text-align: center;
  margin-top: 10rpx;
}
