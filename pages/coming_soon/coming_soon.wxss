/* coming_soon.wxss */
.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: #f8f8f8;
  padding: 30rpx;
}

.coming-soon {
  width: 80%;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: white;
  border-radius: 20rpx;
  padding: 40rpx 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.icon-container {
  margin-bottom: 40rpx;
}

.development-icon {
  width: 200rpx;
  height: 200rpx;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
  text-align: center;
}

.description {
  font-size: 32rpx;
  color: #666;
  text-align: center;
  line-height: 1.5;
  margin-bottom: 40rpx;
}

.sub-desc {
  font-size: 28rpx;
  color: #999;
  margin-top: 20rpx;
}

.button-container {
  width: 100%;
  margin-top: 20rpx;
}

.return-button {
  background-color: #1aad19;
  color: white;
  font-size: 32rpx;
  padding: 20rpx 0;
  border-radius: 10rpx;
  width: 80%;
}
